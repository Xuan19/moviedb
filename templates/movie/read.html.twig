{% extends "base.html.twig" %}

{% block body %}
	<div class="row">
		<h1>{{movie.title}}</h1>
	</div>

	<div class="row">
		<div class="col-6">

			<h2>Personnel</h2>
			<ul>
				{% for cm in movie.crewMembers %}

				    {# {{dump(cm)}} #}
					<li>{{cm.person.name}}{{cm.job.name}}</li>

				{% endfor %}

			</ul>

			<h2>RÃ©alisateur</h2>
			<ul>
				{% for director in movie.directors %}

				    {# {{dump(director)}} #}
					<li>{{director.person.name}}</li>

				{% endfor %}

			</ul>

			<h2>Acteur</h2>
			<ul>
				{% for casting in movie.actors %}

				    {# {{dump(casting)}} #}
					<li>{{casting.role}}({{casting.person.name}})</li>

				{% endfor %}

			</ul>


		</div>


		<div class="col-6">
			<h2>Genres</h2>
			<ul>
				{% for genre in movie.genres %}
					{# {{dump(genre)}} #}

					<li>{{genre.name}}</li>
				{% endfor %}

			</ul>

		</div>

	</div>

{% endblock %}

